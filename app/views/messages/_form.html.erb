<div>
  <label for="entropy">Entropy:</label>
  <span id="entropy">None</span>
</div>

<div id="message">
<div class="field">
  <label for="passphrase">Sender Passphrase</label><br />
  <input id="passphrase" />
</div>

<%= form_for(@message, :remote => true) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag "symmetric_key_tag" %>

  <div class="field">
    <label for="sender_uuid" %>Sender UUID</label><br />
    <%= text_field_tag "sender_uuid" %>
  </div>

  <div class="field">
    <label for="recipient_uuid">Recipient UUID</label><br />
    <%= text_field_tag "recipient_uuid" %>
  </div>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>

  <%= f.hidden_field :signature %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
