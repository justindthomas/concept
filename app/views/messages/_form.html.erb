<div id="message" style="clear:left;position:relative">

	<select name="users" id="users" size="4" multiple="multiple">
		<% @users.each do |user| %>
		<option><%= user.uuid %></option>
		<% end %>
	</select>

	<div class="field">
		<label for="recipient_uuid_input">recipient uuid</label>
		<br />
		<input id="recipient_uuid_input" type="text" class="recipient" />
		<br />
		<a href="#" id="add_recipient">Add Recipient</a>
	</div>

	<div class="field">
		<label for="message_input">message</label>
		<br />
		<textarea cols="40" id="message_input" />
		</textarea>
	</div>

	<%= form_for(@message, :remote => true) do |f| %>
	<% if @message.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

		<ul>
			<% @message.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= hidden_field_tag "sender_uuid" %>

	<%= hidden_field_tag "recipients" %>

	<%= f.hidden_field :body %>

	<%= f.hidden_field :signature %>
	<div class="actions">
		<%= f.submit %>
	</div>
	<% end %>
</div>
